<body>
  <main class="card">
    <div class="badge">
      <span>●</span> MVP-1 • Tech Demo
    </div>
    <h1>Age Proof Demo</h1>
    <h2>Issue and verify a basic “Over 18” proof using our prototype API.</h2>

    <label for="identity">Identity ID (or email, username…)</label>
    <input id="identity" placeholder="e.g. user-123, test@example.com" />

    <button id="issueBtn">1. Issue Over 18 Proof</button>
    <div id="issueStatus" class="status"></div>
    <pre id="issueResult" hidden></pre>

    <button id="verifyBtn" disabled>2. Verify Proof</button>
    <div id="verifyStatus" class="status"></div>
    <pre id="verifyResult" hidden></pre>

    <p style="margin-top: 0.75rem; font-size: 0.75rem; color: #9ca3af;">
      ⚠️ Prototype only – responses are for demo and testing, not legal identity checks.
    </p>
  </main>

  <script>
    const API_BASE = "http://localhost:4000"; // change when you deploy

    const identityInput = document.getElementById("identity");
    const issueBtn = document.getElementById("issueBtn");
    const verifyBtn = document.getElementById("verifyBtn");

    const issueStatus = document.getElementById("issueStatus");
    const verifyStatus = document.getElementById("verifyStatus");
    const issueResult = document.getElementById("issueResult");
    const verifyResult = document.getElementById("verifyResult");

    let lastProofPayload = null;

    issueBtn.addEventListener("click", async () => {
      const identity = identityInput.value.trim();
      if (!identity) {
        issueStatus.textContent = "Please enter an identity first.";
        issueStatus.className = "status error";
        return;
      }

      issueBtn.disabled = true;
      verifyBtn.disabled = true;
      issueStatus.textContent = "Issuing proof…";
      issueStatus.className = "status";

      try {
        const res = await fetch(`${API_BASE}/proof`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            identityId: identity,
            templateId: "over18",
          }),
        });

        const data = await res.json();
        lastProofPayload = data;

        issueResult.hidden = false;
        issueResult.textContent = JSON.stringify(data, null, 2);

        issueStatus.textContent = "Proof issued successfully.";
        issueStatus.className = "status ok";

        verifyBtn.disabled = false;
      } catch (err) {
        console.error(err);
        issueStatus.textContent = "Failed to issue proof.";
        issueStatus.className = "status error";
      } finally {
        issueBtn.disabled = false;
      }
    });

    verifyBtn.addEventListener("click", async () => {
      if (!lastProofPayload) {
        verifyStatus.textContent = "No proof available to verify yet.";
        verifyStatus.className = "status error";
        return;
      }

      verifyBtn.disabled = true;
      verifyStatus.textContent = "Verifying proof…";
      verifyStatus.className = "status";

      try {
        const res = await fetch(`${API_BASE}/proof/verify`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(lastProofPayload),
        });

        const data = await res.json();

        verifyResult.hidden = false;
        verifyResult.textContent = JSON.stringify(data, null, 2);

        if (data.valid) {
          verifyStatus.textContent = "Proof is valid ✅";
          verifyStatus.className = "status ok";
        } else {
          verifyStatus.textContent = "Proof is invalid (as currently implemented) ❌";
          verifyStatus.className = "status error";
        }
      } catch (err) {
        console.error(err);
        verifyStatus.textContent = "Failed to verify proof.";
        verifyStatus.className = "status error";
      } finally {
        verifyBtn.disabled = false;
      }
    });
  </script>
</body>
